{
  "type": "component",
  "metadata": {},
  "schema": {
    "name": "kasper-date-picker",
    "friendlyName": "kasper-date-picker",
    "description": "Date picker that supports locale",
    "icon": "DateInput",
    "settings": [
      {
        "type": "field/datetime",
        "label": "Field",
        "key": "field",
        "required": true
      },
      {
        "type": "text",
        "label": "Label",
        "key": "label"
      },
      {
        "type": "text",
        "label": "Placeholder",
        "key": "placeholder",
        "defaultValue": "2020-12-31 23:00:00"
      },
      {
        "type": "text",
        "label": "Default value",
        "key": "defaultValue"
      },
      {
        "type": "text",
        "label": "Earliest",
        "key": "min",
        "defaultValue": "2001-01-01 00:00:00"
      },
      {
        "type": "text",
        "label": "Latest",
        "key": "max"
      },
      {
        "type": "select",
        "label": "Locale",
        "key": "locale",
        "options": [
          "enUS",
          "enGB",
          "bn",
          "da",
          "de",
          "es",
          "fr",
          "it",
          "ja",
          "ptBR",
          "ru",
          "zhCN"
        ],
        "defaultValue": "enUS"
      },
      {
        "type": "boolean",
        "label": "Show calendar",
        "key": "showCalendar",
        "defaultValue": true
      },
      {
        "type": "boolean",
        "label": "Disabled",
        "key": "disabled",
        "defaultValue": false
      },
      {
        "type": "validation/datetime",
        "label": "Validation",
        "key": "validation"
      }
    ]
  }
}